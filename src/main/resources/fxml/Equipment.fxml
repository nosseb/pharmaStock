<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="550.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.nosseb.pharmaStock.client.UI.CtrlEquipment">
    <children>
        <BorderPane prefHeight="500.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <TableView fx:id="equipments" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="name" prefWidth="179.0" text="Nom" />
                        <TableColumn fx:id="locationName" prefWidth="222.0" text="Lieu de stockage" />
                        <TableColumn fx:id="serialNumber" prefWidth="148.0" text="Numéro de série" />
                    </columns>
                </TableView>
            </center>
            <top>
                <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <buttons>
                        <Button fx:id="retourMenuPrincipal1" mnemonicParsing="false" onAction="#pressRetourMenu" text="Retour Menu principal" />
                    </buttons>
                </ButtonBar>
            </top>
            <bottom>
                <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <buttons>
                        <Button fx:id="editEquipment1" mnemonicParsing="false" onAction="#pressEdit" text="Modifier équipement" />
                        <Button fx:id="supprimerEquipement1" mnemonicParsing="false" onAction="#pressSupprimer" text="Supprimer équipement" />
                        <Button fx:id="ajouterEquipement1" mnemonicParsing="false" onAction="#pressAjouter" text="Ajouter équipement" />
                    </buttons>
                </ButtonBar>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
