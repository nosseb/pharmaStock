<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<AnchorPane prefHeight="550.0" prefWidth="550.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="fr.nosseb.pharmaStock.client.UI.ControleurLieu">
   <children>
      <BorderPane prefHeight="550.0" prefWidth="550.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="retourMenuPrincipal1" mnemonicParsing="false" onAction="#pressRetourMenu" text="Retour Menu principal" />
              </buttons>
            </ButtonBar>
         </top>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="modifierLieu1" mnemonicParsing="false" onAction="#pressModifier" text="Modifier lieu" />
                  <Button fx:id="supprimerLieu1" mnemonicParsing="false" onAction="#pressSupprimer" text="Supprimer lieu" />
                  <Button fx:id="ajouterLieu1" mnemonicParsing="false" onAction="#pressAjouter" text="Ajouter lieu" />
              </buttons>
            </ButtonBar>
         </bottom>
         <center>
            <TableView fx:id="lieux" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="nom" prefWidth="280.0" text="Nom" />
                <TableColumn fx:id="description" maxWidth="1.7976931348623157E308" prefWidth="275.0" text="Description" />
                <TableColumn fx:id="idLieu" text="ID"/>
              </columns>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
